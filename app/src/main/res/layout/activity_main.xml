<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inventory_app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="No Missing Pieces!"
        tools:targetApi="lollipop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inventory_app_toolbar"
        android:contentDescription="@string/puzzle_image"
        android:scaleType="centerCrop"
        android:src="@drawable/puzzle" />

    <TextView
        android:id="@+id/database_summary_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inventory_app_toolbar"
        android:background="@color/colorWashOut" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/database_summary_header"
        android:layout_margin="@dimen/mini_padding">

        <TextView
            android:id="@+id/database_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWashOut" />
    </ScrollView>
</RelativeLayout>